<h1><%= @cocktail.name %></h1>
<h3>Recipe</h3>
<div class="show-cocktail">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><small><%= dose.description %></small> <%= dose.ingredient.name %></li>
    <p><%= link_to 'Delete a dose', dose_path(dose), method: :delete, data: { confirm: "are you sure?"} %></p>
    <% end %>
  </ul>
</div>

<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'Back to cocktails list', root_path %></p>

